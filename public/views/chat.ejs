<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <title>elter-chat</title>
    <style>
        *{
            margin: 0px;
            padding: 0px;
            font-family: 'Kanit', sans-serif;     
        }

        body {
            overflow: hidden;
        }

        .container{
            display:flex;
            width: 100vw;
            height: 100vh;
            background-color: #00010D;
        }

        .lateral {
            display: flex;
            flex-direction: column;
            min-width: 15%;
            max-width: 25%;
            height: 100%;
            min-height: 100%;
        }

        .main {
            display: flex;
            background-color: #011F26;
            width: 100%;
            height: 100%;
            flex-direction: column;
        }

        .chat {
            display: flex;
            flex-direction: column;
            height: 100%;
            background-color: #011F26;
            overflow-y: scroll;
            overflow-x: hidden;
        }

        .txt > h1 {
            font-family: 'Kanit', sans-serif;
            color: #BFB69B;       
            font-weight: 600;
            font-size: 26px;
            padding: 15px;
            text-align: center;
            margin-top: 10px;
            background-color: #011F26;
            border-radius: 6px;
            transition: 1s; 
        }

        .txt {
            display: flex;
            width: 100%;
            justify-content: center;
            align-items: center;   
        }

        .txt:hover {
            cursor: pointer;
        }

        .txt:hover > h1 {
            background-color: #3D6973;
            transition: 1s;
        }

        input {
            font-size: 22px;
            background-color: #011f2600;
            width: 80%;
            height: 50%;
            border-radius: 6px;
            border: 0px;
            margin-left: 10px;
            outline: 1px solid rgba(250, 250, 250, 0.5);
            outline-offset: 10px;
            margin: 5px 5px 5px 30px;
            padding-left: 20px;       
        }

        input:hover {
            outline: 1px solid #3D6973;
            animation: 2s;
        }

        input::placeholder {   
            font-size: 22px;
        }

        button:hover {
            border: 2px solid #3D6973;
            animation: 1s;
        }

        .msg_user, .msg_bot {
            display: flex;
            width: 95%;
            height: 10%;
            border: 1px solid rgb(0, 0, 0);     

            margin-top: 10px;
            margin-bottom: 10px;
            margin-left: 6px;

            box-shadow: 2px 2px 4px 1px rgba(0, 0, 0, 0.377);         
            border-radius: 15px;

            align-items: center;

            padding: 25px;
        }

        .msg_user > h1, .msg_bot > h1 {
            font-size: 15.5px;
            font-weight: 400;
            color: #F2E6D8;
        }

        .msg_bot {         
            background-color: #2d4e55;        
        }
           
        .new_chat {
            display: flex;
            justify-content: center;
            width: 100%;
            color: white;
        }

        .new_chat:hover > h1 {
            background-color: #bfb69b00;
            transition: 1s;
        }

        .new_chat > h1 {
            width: 80%;
            border-radius: 6px;
            text-align: left;
            margin-top: 10px;
            padding: 5px;
            color: white;
            background-color: #bfb69ba4;
            transition: 1s; 
            
        }
        .new_chat > h1 > a {
            text-decoration: none;
            color: #F2E6D8;
        }

        .new_chat > h1 {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 18px;
            text-align: center;
        }

        .input {
            display: flex;
            flex-direction: row;
            height: 10%;
            background-color: rgba(83, 83, 83, 0.397);
            justify-content: center;
            align-items: center;
        }

        input {
            width: 50%;
            color: white;
            margin-right: 25px;
        }

        .submit {
            background-color: #2d4e5500;
            border: 1px solid rgba(255, 255, 255, 0.384);
            color: white;
            border-radius: 6px;
            width: 10%;
            height: 75%;
        }

        @media (max-width: 1500px) {
            .msg_bot, .msg_user {
                width: 90%;
            }
        }

        @media (max-width: 745px) {
            .msg_bot, .msg_user {
                width: 88%;
            }

            .submit {
                width: 25%;
            }
        }

        @media (max-width: 400px) {
            .msg_bot, .msg_user {
                width: 75%;
            }

            .lateral {
                width: 12%;
            }

            .txt > h1 {
                font-size: 16px;
            }

            .new_chat > h1 {
                font-size: 16px;
            }

            .input {
                flex-direction: start;
            }

            input::placeholder{
                font-size: 14px;
            }
        }

        ::-webkit-scrollbar {
            width: 8px;
            background-color: rgba(0,0,0,0);
            -webkit-border-radius: 100px;
        }

        ::-webkit-scrollbar:hover {
            background-color: rgba(0, 0, 0, 0.09);
        }

        ::-webkit-scrollbar-thumb:vertical {
            background: rgba(0,0,0,0.5);
            -webkit-border-radius: 100px;
        }
        ::-webkit-scrollbar-thumb:vertical:active {
            background: rgba(0,0,0,0.61);
            -webkit-border-radius: 100px;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="lateral">
            <div class="txt">
                <h1 id="new_chat">Novo chat</h1>
            </div>
            
            <% if (chats && chats.length > 0) { %>
                <% chats.map((a) => { %>
                    <div class="new_chat">
                        <h1><a href="/chat/<%= a._id %>"><%= a.name %></a></h1>
                    </div>
                  <% }); %>
            <% } else { %>
              <p>Nenhum chat encontrado.</p>
            <% } %>
        </div>

        <div class="main">
            <div class="chat">
                <% if (chat_history && chat_history.length > 0) { %>
                    <% chat_history.map((a) => { %>
                        <% const tag = a.bot ? "msg_bot" : "msg_user", start = a.bot ? "bot: " : "user: "; %>
                        <div class="<%- tag %>">
                            <h1><%- start + a.message %></h1>
                        </div>
                    <% }); %>
                <% } %>
            </div>

            <div class="input">
                <input type="text" placeholder="Digite sua mensagem..." id="msg">
                <button style="font-size:32px" class="submit"><i class="material-icons">send</i></button>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const button = document.querySelector(".submit");
        const chat = document.querySelector("#new_chat");
        const socket = io();

        const id = `<%- id %>`

        function new_chat(name, id) {
            const lateral = document.querySelector(".lateral");

            lateral.innerHTML += 
            `
                <div class="new_chat">
                    <h1><a href="/chat/${id}">${name}</a></h1>
                </div>
            `
        }

        function append_message(content, bot) {

            const msg = [...content];
            const chat = document.querySelector(".chat");

            if (!content)
                return;

            const random_int = Math.floor(Math.random() * 999999999999999);

            const element = document.createElement("h1");
            const div = document.createElement("div");

            div.setAttribute("class", bot ? "msg_bot" : "msg_user");
            element.setAttribute("id", random_int);

            if (bot) {
                div.appendChild(element)
                chat.appendChild(div)
                element.innerHTML += "bot: "
                const interval = setInterval(() => {
                    element.innerHTML += msg[0];
                    msg.splice(0, 1);

                    console.log(msg[0]);

                    if (msg.length == 0)
                        clearInterval(interval);
                }, 10);

            }
            else {
                chat.innerHTML += 
                `
                <div class="msg_${bot ? "bot" : "user"}">
                    <h1>user: ${content}</h1>
                </div>
                `;
            }
        }

        socket.on("msg", (data) => {
            console.log(data);
            append_message(data, true);
        });

        socket.on("new_chat", (data) => {
            new_chat(data[1], data[0]);
        });

        chat.addEventListener("click", (event) => {
            const date = new Date();
            socket.emit("create_new_chat", date.getDate());
        });

        button.addEventListener("click", () => {
            const input_text = document.getElementById("msg").value;

            if (!input_text)
                return;

            socket.emit("msg", [false, id, input_text]);
            append_message(input_text, false);
        });
    </script>
</body>
</html>